<% layout('layouts/boilerplate') %>
<div class="row mt-3">
    <div class="cols-8 offset-2">

    <h3> Edit Your Listings </h3>
    <form method="post"
    enctype="multipart/form-data"
     action="/listings/<%= listing._id %>?_method=put"
      novalidate class="needs-validation" 
      >

        <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required />   
        <div class="valid-feedback"> Title looks Good !</div> 
        </div>
        
        <div class="mb-2">
        <lable for="description" class="form-label">Description</lable>
        <textarea name="listing[description]" class="form-control" required ><%= listing.description %></textarea> 
        <div class="invalid-feedback"> description should be valid</div>

        </div>
        <div class="mb-3">
            Orignal Listing Image <br />
            <img src="<%= originalImageUrl %>" />

        </div>
       
        <div class="mb-3">
        <lable for="image" class="form-label">Upload new image</lable>
            <input 
            name="listing[image]"
             type="file" 
             class="form-control" 
             />

            
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
            <input name="listing[price]"  value="<%= listing.price %>" type="number" class="form-control" required/>
        <div class="invalid-feedback">Price should be valid</div>

            </div>
            
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-label">country</lable>
            <input name="listing[country]"  value="<%= listing.country %>" type="text" class="form-control" required/>
        <div class="invalid-feedback">country should be valid</div>

            </div>
        </div>
        
        
        <div>
            <lable for="location" class="form-label">Location</lable>
            <input name="listing[location]"  value="<%= listing.location %>" type="text" class="form-control" required/>
        <div class="invalid-feedback">location</div>

        </div>
        
        <button class="btn btn-dark editBtn mt-3">edit</button>
    </form>
</div>
</div>
